<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <%= form_tag authentication_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, params[:email], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Senha" %>
        <%= password_field_tag :password, params[:password], class: 'form-control' %>
      </div>
      <%= submit_tag 'Entrar', class: 'btn btn-primary row-button' %>
    <% end %>
  </div>
</div>
