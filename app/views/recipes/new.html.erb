<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <%= form_for(@recipe) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :food_type %>
      <%= f.text_field :food_type, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cuisine %>
      <%= f.text_field :cuisine, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :people %>
      <%= f.text_field :people, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :time %>
      <%= f.text_field :time, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :difficulty %>
      <%= f.select :difficulty, enum_select_i18n(Recipe, :difficulty, has_value:false), html_options: {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.label :ingredients %>
      <%= f.text_area :ingredients, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :procedure %>
      <%= f.text_area :procedure, class: 'form-control' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
