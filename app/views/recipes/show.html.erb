<div class="row">
  <div class="col-md-offset-4 col-md-6">
    <div class="">
      <h2><%= @recipe.name %></h2>
      <div class="">
        <%= image_tag @recipe.image.thumb.url %>
      </div>
      <div class="">
        <h4>Tipo</h4>
        <p><%= @recipe.food_type.name %></p>
      </div>
      <div class="">
        <h4>Cozinha</h4>
        <p><%= @recipe.cuisine.name %></p>
      </div>
      <div class="">
        <h4>Pessoas por porção</h4>
        <p><%= @recipe.people %></p>
      </div>
      <div class="">
        <h4>Tempo de preparo</h4>
        <p><%= @recipe.time %></p>
      </div>
      <div class="">
        <h4>Tempo de preparo</h4>
        <p><%= find_i18n_string(Recipe, 'difficulties', @recipe.difficulty) %></p>
      </div>
      <div class="">
        <h4>Ingredientes</h4>
        <p><%= @recipe.ingredients %></p>
      </div>
      <div class="">
        <h4>Modo de preparo</h4>
        <p><%= @recipe.procedure %></p>
      </div>
      <%= link_to 'Excluir receita', recipe_path(@recipe), method: :delete, style: 'float:right;'%>
      <br>
      <p id="favorites" >
        <%= @recipe.favorites.size %>
        <% if @recipe.favorited?(current_user) %>
          <%= link_to 'Desfavoritar', recipe_favorite_path(@recipe), method: :delete, style: 'float:right;'%>
        <% else %>
          <%= link_to 'Favoritar', recipe_favorites_path(@recipe), method: :post, style: 'float:right;'%>
        <% end %>
      </p>
    </div>
  </div>
</div>
