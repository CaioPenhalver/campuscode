<div class="flex-container">
  <% recipes.each do |recipe| %>
  <div class="flex-item">
    <h2><%= recipe.name %></h2>
    <div class="">
      <%= image_tag recipe.image.thumb.url %>
    </div>
    <div class="">
      <%= link_to "Ver receita...", recipe_path(recipe) %>
    </div>
  </div>
  <% end %>
</div>
